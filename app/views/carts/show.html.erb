<p style="color: green"><%= notice %></p>

<h3>Items in your shopping cart</h3>

<table>
  <% @cart.lineitems.each do |item| %>
  <tr> 
    <td><%= item.quantity %></td>
    <td><%= item.product.name %> </td>
    <td><%= item.product.price %> </td>
  </tr>
  <% end %>
  <tr>
    <td colspan='2'>Total</td>
    <td><%= @cart.total_price_in_this_cart%> </td>
  </tr>
</table>

<div>
  <%= link_to "Edit this cart", edit_cart_path(@cart) %>

  <%= button_to "Empty this cart", @cart, method: :delete, data: {confirm: 'are you sure?'} %>
</div>
