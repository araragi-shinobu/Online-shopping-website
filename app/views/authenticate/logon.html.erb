<!-- app/views/authenticate/logon.html.erb -->

<%= form_with url: checkpassword_path, method: :post do |form| %>
  <div>
    <%= form.label :userid, "User ID" %>
    <%= form.text_field :userid %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>
