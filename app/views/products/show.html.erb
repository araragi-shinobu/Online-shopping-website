<div class="show-product">
  <p class="notice"><%= notice %></p>

  <div class="product-details">
    <%= render @product %>
  </div>

  <div class="product-actions">
    <%= link_to "Edit this product", edit_product_path(@product), class: "action-link" %>
    |
    <%= link_to "Back to products", products_path, class: "action-link" %>

    <%= button_to "Destroy this product", @product, method: :delete, class: "action-button" %>
  </div>
</div>
